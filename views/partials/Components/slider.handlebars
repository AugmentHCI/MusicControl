<!--run handlebars -m views/partials/Components/ -f  public/js/templates.js-->
<div id='{{name}}' class="slidecontainer">
    <div class="sliderInfo">
        <div id='{{name}}_output' class="sliderOutput">
            {{name}} : {{startValue}} &nbsp;
        </div>
        <i data-toggle="tooltip" title="{{definition}}" class="fas fa-question-circle"></i>
    </div>

    <input type="range" min="0" max="100" value='{{startValue}}' id= '{{name}}_Slider' class="slider" color={{color}} style=
            "background: linear-gradient(90deg, {{color}} {{startValue}}%, rgba(53, 53, 53, 1) {{startValue}}%)">

    <div id='{{name}}_tooltip' class="tooltip">
        <span class="tooltiptext">{{definition}}</span>
    </div>

</div>